{
  "name": "@opengovsg/checkfirst",
  "version": "1.0.0",
  "description": "Calculators and eligibility checkers for Singapore Government policies",
  "main": "build/server/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "test": "echo 'No tests implemented'",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only --inspect -- src/server/index.ts",
    "start": "node build/server/index.js"
  },
  "author": "Open Government Products, GovTech Singapore (https://open.gov.sg)",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/opengovsg/checkfirst.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/travis-cli": "^11.0.0",
    "@types/convict": "^5.2.2",
    "@types/express": "^4.17.9",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "commitlint --from origin/master --to HEAD --verbose"
    }
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "convict": "^6.0.0",
    "express": "^4.17.1"
  }
}
